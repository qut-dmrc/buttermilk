            "AzureOpenAIConnection"
          ],
          "filter_by": {
            "input_name": "api",
            "values": {
              "chat": {
                "capabilities": {
                  "chat_completion": true,
                  "exclude": {
                    "model_version": [
                      "vision-preview"
                    ]
                  }
                }
              },
              "completion": {
                "capabilities": {
                  "completion": true,
                  "include": {
                    "model_name": [
                      "gpt-35-turbo-instruct"
                    ]
                  }
                }
              }
            }
          },
          "allow_manual_entry": true,
          "is_multi_select": false,
