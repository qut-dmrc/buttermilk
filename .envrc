# Environment configuration for Claude Code and development tools
# This file is sourced by direnv or can be manually sourced

# GitHub CLI default repository
export GH_REPO="qut-dmrc/buttermilk"

# Optional: Set default GitHub host if using GitHub Enterprise
# export GH_HOST="github.com"

# Optional: Set GitHub token if not already configured globally
# export GH_TOKEN="your_token_here"

# Python path for buttermilk development
export PYTHONPATH="${PYTHONPATH}:${PWD}"

# Development environment
export ENVIRONMENT="development"