{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal"
        },
        {
            "name": "automod debug",
            "type": "debugpy",
            "request": "launch",
            "module": "buttermilk.automod.pfmod",
            "cwd": "${workspaceFolder}",
            "pythonArgs": [
                "-Xfrozen_modules=off",
                "-Xdev"
            ],
            "justMyCode": false,
            "args": [
                "+experiments=ots",
                "+data=drag_noalt",
                "experiments.ots.init.flow=REGARD"
            ],
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal"
        },
        {
            "name": "batch automod: trans",
            "type": "debugpy",
            "request": "launch",
            "module": "examples.automod.pfmod",
            "cwd": "${workspaceFolder}",
            "pythonArgs": [
                "-Xfrozen_modules=off",
                "-Xdev"
            ],
            "justMyCode": false,
            "args": [
                "--multirun",
                "+experiments=trans",
                "judger.model=sonnet",
                "judger.standard=trans_cte.jinja2,trans_glaad.jinja2,trans_hrc.jinja2,trans_tja.jinja2,trans_simplified.jinja2,trans_factored.jinja2"
            ],
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal"
        },
        {
            "name": "batch automod: ots",
            "type": "debugpy",
            "request": "launch",
            "module": "examples.automod.pfmod",
            "cwd": "${workspaceFolder}",
            "pythonArgs": [
                "-Xfrozen_modules=off",
                "-Xdev"
            ],
            "justMyCode": false,
            "args": [
                "+experiments=ots",
                "+data=drag_noalt",
                "+save=bq",
            ],
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal"
        },
        {
            "name": "Test Config",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "pythonArgs": [
                "-Xfrozen_modules=off",
                "-Xdev"
            ],
            "env": {
                "PYDEVD_DISABLE_FILE_VALIDATION": "1",
                "PYTEST_ADDOPTS": "-n1 --continue-on-collection-errors -rA"
            },
            "justMyCode": false,
            "purpose": [
                "debug-test"
            ],
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal"
        }
    ]
}