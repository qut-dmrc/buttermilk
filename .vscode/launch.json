{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: FastAPI",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "buttermilk.api.flow:app",
        "--reload",
        "+flows=[simple,osb,hate,trans,describer]",
        "llms=lite"
      ],
      "jinja": true
    },

    {
      "name": "Python Debugger: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "envFile": "${workspaceFolder}/.env",
      "cwd": "${workspaceFolder}",
      "justMyCode": false,
      "console": "integratedTerminal",
      "args": []
    },
    {
      "name": "batch run",
      "type": "debugpy",
      "request": "launch",
      "module": "buttermilk.runner.cli",
      "cwd": "${workspaceFolder}",
      "pythonArgs": ["-Xfrozen_modules=off", "-Xdev"],
      "justMyCode": false,
      "args": [
        "ui=batch",
        "+run=batch",
        "+flow=trans",
        "llms=full",
      ],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    },
    {
      "name": "daemon",
      "type": "debugpy",
      "request": "launch",
      "module": "buttermilk.runner.cli",
      "cwd": "${workspaceFolder}",
      "pythonArgs": [
        "-Xfrozen_modules=off",
        "-Xdev"
      ],
      "justMyCode": true,
      "args": [
        "ui=api",
        "flows=[trans,simple]",
        "llms=lite",
      ],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    },
    {
      "name": "pubsub",
      "type": "debugpy",
      "request": "launch",
      "module": "buttermilk.runner.cli",
      "cwd": "${workspaceFolder}",
      "pythonArgs": [
        "-Xfrozen_modules=off",
        "-Xdev"
      ],
      "justMyCode": true,
      "args": [
        "ui=pub/sub",
        "flows=[trans,simple]",
        "llms=full",
      ],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    },
    {
      "name": "streamlit",
      "type": "debugpy",
      "request": "launch",
      "module": "streamlit",
      "cwd": "${workspaceFolder}",
      "pythonArgs": [
        "-Xfrozen_modules=off",
        "-Xdev"
      ],
      "args": ["run", "buttermilk/web/interface.py",
        "hydra.verbose=false",
        "+flows=trans",
        "ui=streamlit",
        "llms=lite",
        "name=bmdevelopment",
        "job=api",
        //"+record_id=${input:query}" // Will prompt for query
      ],
    },
    {
      "name": "fastapi web ui",
      "type": "debugpy",
      "request": "launch",
      "module": "buttermilk.runner.cli",
      "cwd": "${workspaceFolder}",
      "pythonArgs": [
        "-Xfrozen_modules=off",
        "-Xdev"
      ],
      "args": [
        "hydra.verbose=false",
        "+flows=trans",
        "ui=api",
        "llms=lite",
        "name=bmdevelopment",
        "job=api",
        //"+record_id=${input:query}" // Will prompt for query
      ],
      "envFile": "${workspaceFolder}/.env",
      "justMyCode": false,
      "console": "integratedTerminal"
    },
    {
      "name": "cli interactive",
      "type": "debugpy",
      "request": "launch",
      "module": "buttermilk.runner.cli",
      "cwd": "${workspaceFolder}",
      "pythonArgs": ["-Xfrozen_modules=off", "-Xdev"],
      "justMyCode": true,
      "args": [
        "hydra.verbose=false",
        "+flows=[panel]",
        "flow=panel",
        "record_id=NCAA_transgender_athletes",
        "ui=console",
        "llms=lite",
        "++name=panel",
        //"+record_id=${input:query}" // Will prompt for query
      ],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    },
    {
      "name": "slack debug",
      "type": "debugpy",
      "request": "launch",
      "module": "buttermilk.runner.cli",
      "cwd": "${workspaceFolder}",
      "pythonArgs": ["-Xfrozen_modules=off", "-Xdev"],
      "justMyCode": true,
      "args": [
        "hydra.verbose=false",
        "+flows=[trans,hate,ffa,simple]",
        "ui=slackbot",
        "llms=lite",
        "++name=automod",
        "++job=development"
      ],  
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    },
    {
      "name": "vectorise",
      "type": "debugpy",
      "request": "launch",
      "module": "buttermilk.data.vector",
      "cwd": "${workspaceFolder}",
      "pythonArgs": ["-Xfrozen_modules=off", "-Xdev"],
      "justMyCode": false,
      "args": [
        "+run=vectorise",
        // "experiments.model=[haiku]"
      ],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    },
    {
      "name": "batch automod: ots",
      "type": "debugpy",
      "request": "launch",
      "module": "examples.automod.pfmod",
      "cwd": "${workspaceFolder}",
      "pythonArgs": ["-Xfrozen_modules=off", "-Xdev"],
      "justMyCode": false,
      "args": ["+experiments=ots", "+data=drag_noalt", "+save=bq"],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    },
    {
      "name": "Test Config",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "pythonArgs": ["-Xfrozen_modules=off", "-Xdev"],
      "env": {
        "PYDEVD_DISABLE_FILE_VALIDATION": "1",
        "PYTEST_ADDOPTS": "-n1 -vv --showlocals --tb=short"
      },
      "justMyCode": false,
      "purpose": ["debug-test"],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    }
  ],
  "inputs": [
    {
      "id": "query",
      "type": "promptString",
      "description": "Enter search query",
      "default": ""
    }
  ]
}
