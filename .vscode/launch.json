{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal"
        },
        {
            "name": "batch automod: trans",
            "type": "debugpy",
            "request": "launch",
            "module": "examples.automod.mod",
            "cwd": "${workspaceFolder}",
            "pythonArgs": [
                "-Xfrozen_modules=off",
                "-Xdev"
            ],
            "justMyCode": false,
            "args": [
                "--multirun",
                "+experiments=trans",
            ],
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal"
        },
        {
            "name": "Test Config",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "pythonArgs": [
                "-Xfrozen_modules=off",
                "-Xdev"
            ],
            "justMyCode": false,
            "purpose": [
                "debug-test"
            ],
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal"
        }
    ]
}