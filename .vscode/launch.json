{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: FastAPI",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "buttermilk.api.flow:app",
        "--reload",
        "+flows=[simple,osb,hate,trans,describer]",
        "llm=lite"
      ],
      "jinja": true
    },

    {
      "name": "Python Debugger: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "envFile": "${workspaceFolder}/.env",
      "cwd": "${workspaceFolder}",
      "justMyCode": false,
      "console": "integratedTerminal",
      "args": []
    },
    {
      "name": "flow mod debug",
      "type": "debugpy",
      "request": "launch",
      "module": "buttermilk.api.flow",
      "cwd": "${workspaceFolder}",
      "pythonArgs": ["-Xfrozen_modules=off", "-Xdev"],
      "justMyCode": false,
      "args": [
        "+flows=[trans]",
        //"+flows=[simple,osb,hate,trans,describer]",
        "llms=lite"
      ],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    },
    {
      "name": "cli debug",
      "type": "debugpy",
      "request": "launch",
      "module": "buttermilk.runner.cli",
      "cwd": "${workspaceFolder}",
      "pythonArgs": ["-Xfrozen_modules=off", "-Xdev"],
      "justMyCode": false,
      "args": [
        "hydra.verbose=false",
        "+flows=[trans]",
        "+flow=trans",
        "llms=full",
        "+record_id=${input:query}" // Will prompt for query
      ],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    },
    {
      "name": "automod: osbcases",
      "type": "debugpy",
      "request": "launch",
      "module": "examples.automod.mod",
      "cwd": "${workspaceFolder}",
      "pythonArgs": ["-Xfrozen_modules=off", "-Xdev"],
      "justMyCode": false,
      "args": [
        "+flows=summarise_osb",
        "job=batch"

        // "experiments.model=[haiku]"
      ],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    },
    {
      "name": "automod: trans synth",
      "type": "debugpy",
      "request": "launch",
      "module": "examples.automod.mod",
      "cwd": "${workspaceFolder}",
      "pythonArgs": ["-Xfrozen_modules=off", "-Xdev"],
      "justMyCode": false,
      "args": ["+experiments=synth"],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    },
    {
      "name": "automod: trans eval",
      "type": "debugpy",
      "request": "launch",
      "module": "examples.automod.mod",
      "cwd": "${workspaceFolder}",
      "pythonArgs": ["-Xfrozen_modules=off", "-Xdev"],
      "justMyCode": false,
      "args": ["+experiments=eval_trans"],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    },
    {
      "name": "batch automod: ots",
      "type": "debugpy",
      "request": "launch",
      "module": "examples.automod.pfmod",
      "cwd": "${workspaceFolder}",
      "pythonArgs": ["-Xfrozen_modules=off", "-Xdev"],
      "justMyCode": false,
      "args": ["+experiments=ots", "+data=drag_noalt", "+save=bq"],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    },
    {
      "name": "batch automod debug haiku: judge",
      "type": "debugpy",
      "request": "launch",
      "module": "examples.automod.mod",
      "cwd": "${workspaceFolder}",
      "pythonArgs": ["-Xfrozen_modules=off", "-Xdev"],
      "justMyCode": false,
      "args": [
        "+data=drag",
        "+step=ordinary",
        "+save=bq",
        "job=test",
        "source=debugger",
        "step.0.agent.model=['haiku']",
        "step.0.concurrent=1"
      ],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    },
    {
      "name": "tonepolice full run",
      "type": "debugpy",
      "request": "launch",
      "module": "buttermilk.runner.cli",
      "cwd": "${workspaceFolder}",
      "pythonArgs": ["-Xfrozen_modules=off", "-Xdev"],
      "justMyCode": false,
      "args": [
        "+flows=[hate]",
        "llm=full",
        "+flow=hate",
        "+q=${input:query}" // Will prompt for query
      ],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    },
    {
      "name": "Test Config",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "pythonArgs": ["-Xfrozen_modules=off", "-Xdev"],
      "env": {
        "PYDEVD_DISABLE_FILE_VALIDATION": "1",
        "PYTEST_ADDOPTS": "-n1"
      },
      "justMyCode": false,
      "purpose": ["debug-test"],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    }
  ],
  "inputs": [
    {
      "id": "query",
      "type": "promptString",
      "description": "Enter search query",
      "default": ""
    }
  ]
}
