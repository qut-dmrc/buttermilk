{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: FastAPI",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "buttermilk.api.flow:app",
        "--reload",
        "+flows=[mock,simple,osb,hate,trans,describer]",
        "llms=lite"
      ],
      "jinja": true
    },

    {
      "name": "Python Debugger: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "envFile": "${workspaceFolder}/.env",
      "cwd": "${workspaceFolder}",
      "justMyCode": false,
      "console": "integratedTerminal",
      "args": []
    },
    {
      "name": "batch create",
      "type": "debugpy",
      "request": "launch",
      "module": "buttermilk.runner.cli",
      "cwd": "${workspaceFolder}",
      "pythonArgs": ["-Xfrozen_modules=off", "-Xdev"],
      "justMyCode": false,
      "args": [
        "+run=batch",
        "flows=[trans]",
        "llms=full",
        "+flow=${input:query}" // Will prompt for query
      ],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    },
    {
      "name": "daemon",
      "type": "debugpy",
      "request": "launch",
      "module": "buttermilk.runner.cli",
      "cwd": "${workspaceFolder}",
      "pythonArgs": [
        "-Xfrozen_modules=off",
        "-Xdev"
      ],
      "justMyCode": true,
      "args": [
        "+run=api",
        "flows=[mock,trans,simple,z,tox,judger]",
        "human_in_loop=${input:human_in_loop}",
        "llms=full",
        "ui=web"
      ],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    },
{
  "name": "batch run",
  "type": "debugpy",
  "request": "launch",
  "module": "buttermilk.runner.cli",
  "cwd": "${workspaceFolder}",
  "pythonArgs": [
    "-Xfrozen_modules=off",
    "-Xdev"
  ],
  "justMyCode": false,
  "args": [
    "+run=batch",
    "run.mode=batch_run",
    "flows=[trans]",
    "human_in_loop=false",
  ],
  "envFile": "${workspaceFolder}/.env",
  "console": "integratedTerminal"
},
{
      "name": "zot",
      "type": "debugpy",
      "request": "launch",
      "module": "buttermilk.runner.cli",
      "cwd": "${workspaceFolder}",
      "pythonArgs": [
        "-Xfrozen_modules=off",
        "-Xdev"
      ],
      "justMyCode": true,
      "args": [
        "+run=console",
        "flows=[trans,simple,z]",
        "+flow=zot",
        "llms=full",
        "human_in_loop=${input:human_in_loop}",
        "ui=console"
      ],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    },
    {
      "name": "pubsub",
      "type": "debugpy",
      "request": "launch",
      "module": "buttermilk.runner.cli",
      "cwd": "${workspaceFolder}",
      "pythonArgs": [
        "-Xfrozen_modules=off",
        "-Xdev"
      ],
      "justMyCode": true,
      "args": [
        "+run=pub/sub",
        "+run=batch",
        "flows=[trans]",
        "+flow=trans",
        "llms=full",
        "human_in_loop=false"
      ],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    },
    {
      "name": "streamlit",
      "type": "debugpy",
      "request": "launch",
      "module": "streamlit",
      "cwd": "${workspaceFolder}",
      "pythonArgs": [
        "-Xfrozen_modules=off",
        "-Xdev"
      ],
      "args": ["run", "buttermilk/web/interface.py",
        "hydra.verbose=false",
        "flows=[trans]",
        "+run=streamlit",
        "llms=lite",
        "name=bmdevelopment",
        "job=api",
        //"+record_id=${input:query}" // Will prompt for query
      ],
    },
    {
      "name": "fastapi web ui",
      "type": "debugpy",
      "request": "launch",
      "module": "buttermilk.runner.cli",
      "cwd": "${workspaceFolder}",
      "pythonArgs": [
        "-Xfrozen_modules=off",
        "-Xdev"
      ],
      "args": [
        "hydra.verbose=false",
        "+flows=trans",
        "+run=api",
        "llms=lite",
        "name=bmdevelopment",
        "job=api",
        //"+record_id=${input:query}" // Will prompt for query
      ],
      "envFile": "${workspaceFolder}/.env",
      "justMyCode": false,
      "console": "integratedTerminal"
    },
    {
      "name": "cli interactive",
      "type": "debugpy",
      "request": "launch",
      "module": "buttermilk.runner.cli",
      "cwd": "${workspaceFolder}",
      "pythonArgs": ["-Xfrozen_modules=off", "-Xdev"],
      "justMyCode": true,
      "args": [
        "hydra.verbose=false",
        "+flows=[panel]",
        "flow=panel",
        "record_id=NCAA_transgender_athletes",
        "+run=console",
        "llms=lite",
        "++name=panel",
        //"+record_id=${input:query}" // Will prompt for query
      ],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    },
    {
      "name": "slack debug",
      "type": "debugpy",
      "request": "launch",
      "module": "buttermilk.runner.cli",
      "cwd": "${workspaceFolder}",
      "pythonArgs": ["-Xfrozen_modules=off", "-Xdev"],
      "justMyCode": true,
      "args": [
        "hydra.verbose=false",
        "+flows=[trans,z]",
        "+run=slackbot",
        "llms=full",
        "++name=automod",
        "++job=development"
      ],  
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    },
    {
      "name": "vectorise",
      "type": "debugpy",
      "request": "launch",
      "module": "buttermilk.data.vector",
      "cwd": "${workspaceFolder}",
      "pythonArgs": ["-Xfrozen_modules=off", "-Xdev"],
      "justMyCode": false,
      "args": [
        "+run=vectorise",
        // "experiments.model=[haiku]"
      ],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    },
    {
      "name": "batch automod: ots",
      "type": "debugpy",
      "request": "launch",
      "module": "examples.automod.pfmod",
      "cwd": "${workspaceFolder}",
      "pythonArgs": ["-Xfrozen_modules=off", "-Xdev"],
      "justMyCode": false,
      "args": ["+experiments=ots", "+data=drag_noalt", "+save=bq"],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    },
    {
      "name": "Test Config",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "pythonArgs": ["-Xfrozen_modules=off", "-Xdev"],
      "env": {
        "PYDEVD_DISABLE_FILE_VALIDATION": "1",
        "PYTEST_ADDOPTS": "-n1 -vv --showlocals --tb=short"
      },
      "justMyCode": false,
      "purpose": ["debug-test"],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    }
  ],
  "inputs": [
    {
      "id": "query",
      "type": "promptString",
      "description": "Enter search query",
      "default": ""
    },
    {
      "id": "human_in_loop",
      "type": "pickString",
      "description": "human in the loop?",
      "options": [
        "true",
        "false",
      ]
    }
  ]
  
}
