{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: FastAPI",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "buttermilk.api.flow:app",
        "--reload",
        "+flows=[simple,osb,hate,trans,describer]",
        "llms=lite"
      ],
      "jinja": true
    },

    {
      "name": "Python Debugger: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "envFile": "${workspaceFolder}/.env",
      "cwd": "${workspaceFolder}",
      "justMyCode": false,
      "console": "integratedTerminal",
      "args": []
    },
    {
      "name": "moa debug",
      "type": "debugpy",
      "request": "launch",
      "module": "buttermilk.runner.chat",
      "cwd": "${workspaceFolder}",
      "pythonArgs": ["-Xfrozen_modules=off", "-Xdev"],
      "justMyCode": false,
      "args": ["+flows=[trans,simple,hate,chat]", "llms=full"],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    },
    {
      "name": "cli debug",
      "type": "debugpy",
      "request": "launch",
      "module": "buttermilk.runner.cli",
      "cwd": "${workspaceFolder}",
      "pythonArgs": ["-Xfrozen_modules=off", "-Xdev"],
      "justMyCode": true,
      "args": [
        "hydra.verbose=false",
        "+flows=[trans]",
        "+flow=trans",
        "ui=console",
        "llms=lite",
        "++name=automod",
        "++job=debugging"
        //"+record_id=${input:query}" // Will prompt for query
      ],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    },
    {
      "name": "slack debug",
      "type": "debugpy",
      "request": "launch",
      "module": "buttermilk.runner.cli",
      "cwd": "${workspaceFolder}",
      "pythonArgs": ["-Xfrozen_modules=off", "-Xdev"],
      "justMyCode": true,
      "args": [
        "hydra.verbose=false",
        "+flows=[trans,hate,ffa,simple]",
        "ui=slackbot",
        "llms=full",
        "++name=automod",
        "++job=development"
      ],  
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    },
    {
      "name": "vectorise",
      "type": "debugpy",
      "request": "launch",
      "module": "buttermilk.data.vector",
      "cwd": "${workspaceFolder}",
      "pythonArgs": ["-Xfrozen_modules=off", "-Xdev"],
      "justMyCode": false,
      "args": [
        "+run=vectorise",
        // "experiments.model=[haiku]"
      ],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    },
    {
      "name": "automod: trans synth",
      "type": "debugpy",
      "request": "launch",
      "module": "examples.automod.mod",
      "cwd": "${workspaceFolder}",
      "pythonArgs": ["-Xfrozen_modules=off", "-Xdev"],
      "justMyCode": false,
      "args": ["+experiments=synth"],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    },
    {
      "name": "automod: trans eval",
      "type": "debugpy",
      "request": "launch",
      "module": "examples.automod.mod",
      "cwd": "${workspaceFolder}",
      "pythonArgs": ["-Xfrozen_modules=off", "-Xdev"],
      "justMyCode": false,
      "args": ["+experiments=eval_trans"],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    },
    {
      "name": "batch automod: ots",
      "type": "debugpy",
      "request": "launch",
      "module": "examples.automod.pfmod",
      "cwd": "${workspaceFolder}",
      "pythonArgs": ["-Xfrozen_modules=off", "-Xdev"],
      "justMyCode": false,
      "args": ["+experiments=ots", "+data=drag_noalt", "+save=bq"],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    },
    {
      "name": "batch automod debug haiku: judge",
      "type": "debugpy",
      "request": "launch",
      "module": "examples.automod.mod",
      "cwd": "${workspaceFolder}",
      "pythonArgs": ["-Xfrozen_modules=off", "-Xdev"],
      "justMyCode": false,
      "args": [
        "+data=drag",
        "+step=ordinary",
        "+save=bq",
        "job=test",
        "source=debugger",
        "step.0.agent.model=['haiku']",
        "step.0.concurrent=1"
      ],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    },
    {
      "name": "tonepolice full run",
      "type": "debugpy",
      "request": "launch",
      "module": "buttermilk.runner.cli",
      "cwd": "${workspaceFolder}",
      "pythonArgs": ["-Xfrozen_modules=off", "-Xdev"],
      "justMyCode": false,
      "args": [
        "+flows=[hate]",
        "llm=full",
        "+flow=hate",
        "+q=${input:query}" // Will prompt for query
      ],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    },
    {
      "name": "Test Config",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "pythonArgs": ["-Xfrozen_modules=off", "-Xdev"],
      "env": {
        "PYDEVD_DISABLE_FILE_VALIDATION": "1",
        "PYTEST_ADDOPTS": "-n1 --capture=no -v"
      },
      "justMyCode": false,
      "purpose": ["debug-test"],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    }
  ],
  "inputs": [
    {
      "id": "query",
      "type": "promptString",
      "description": "Enter search query",
      "default": ""
    }
  ]
}
